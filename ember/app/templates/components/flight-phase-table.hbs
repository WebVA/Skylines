<table id="phases-table" class="table table-condensed table-striped phases-table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>{{t "start"}}</th>
      <th class='hidden-md'>{{t "duration"}}</th>
      <th class='numeric'>&Delta;H<br />[{{altitudeUnit}}]</th>
      <th class='numeric'>{{t "distance-abbr"}}<br />[{{distanceUnit}}]</th>
      <th class='numeric'>{{t "avg-vario-abbr"}}<br />[{{liftUnit}}]</th>
      <th class='numeric'>{{t "avg-speed-abbr"}}<br />[{{speedUnit}}]</th>
      <th class='numeric'><abbr title={{t "glide-rate"}}>{{t "glide-rate-abbr"}}</abbr></th>
    </tr>
  </thead>
  <tbody>
    {{#each phases as |phase|}}
      {{flight-phase-row phase=phase selection=selection onSelect=onSelect}}
    {{/each}}
  </tbody>
</table>
