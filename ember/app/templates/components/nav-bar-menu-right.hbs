{{#if account.user}}
{{else}}
  <li class="{{if (eq activePage "login") "active"}} visible-xs">
    <a href="/login">
      <i class="icon-signin"></i> {{t "login"}}
    </a>
  </li>

  <li class="dropdown {{if (eq activePage "login") "active"}} hidden-xs">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      <i class="icon-signin"></i> {{t "login"}} <i class="icon-caret-down"></i>
    </a>
    <div class="dropdown-menu">{{login-form inline=true}}</div>
  </li>
{{/if}}

<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    {{x-flag code=currentLocale.countryCode}}
    <span class="visible-xs">{{currentLocale.name}}</span>
    <i class="icon-caret-down"></i>
  </a>
  <ul class="dropdown-menu">
    {{#each availableLocales as |locale|}}
      <li><a href="#" {{action "setLocale" locale.code}}>{{x-flag code=locale.countryCode}} {{locale.name}}</a></li>
    {{/each}}
  </ul>
</li>
