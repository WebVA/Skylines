{{#if (or pilot club airport account.user)}}
  <ul class="nav nav-pills">
    <li class={{if (not (or pilot club airport)) "active"}}><a href="/statistics">SkyLines</a></li>

    {{#if airport}}
      <li class="active"><a href="/statistics/airport/{{airport}}">{{name}}</a></li>
    {{/if}}

    {{#if club}}
      <li class="active"><a href="/statistics/club/{{club}}">{{name}}</a></li>
    {{/if}}

    {{#if (and account.club (not-eq account.club.id club))}}
      <li><a href="/statistics/club/{{account.club.id}}">{{account.club.name}}</a></li>
    {{/if}}

    {{#if pilot}}
      <li class="active"><a href="/statistics/pilot/{{pilot}}">{{name}}</a></li>
    {{/if}}

    {{#if (and account.user (not-eq account.user.id pilot))}}
      <li><a href="/statistics/pilot/{{account.user.id}}">{{account.user.name}}</a></li>
    {{/if}}
  </ul>
{{/if}}


<h2>{{t "flights"}}</h2>
{{stats-flights-table years=years}}

<h2>{{t "distance"}}</h2>
{{stats-distance-table years=years}}

<h2>{{t "flight-time"}}</h2>
{{stats-duration-table years=years}}

{{#if (not pilot)}}
  <h2>{{t "pilots"}}</h2>
  {{stats-pilots-table years=years sumPilots=sumPilots}}
{{/if}}
