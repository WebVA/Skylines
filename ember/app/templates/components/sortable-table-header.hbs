{{#if (not-eq column sortColumn)}}
  {{#link-to (query-params column=column order=defaultOrder) tagName="th" class=cssClass}}{{yield}}{{/link-to}}
{{else if (eq sortOrder "asc")}}
  {{#link-to (query-params column=column order="desc") tagName="th" class=cssClass}}<i class="icon-chevron-up"></i> {{yield}}{{/link-to}}
{{else}}
  {{#link-to (query-params column=column order="asc") tagName="th" class=cssClass}}<i class="icon-chevron-down"></i> {{yield}}{{/link-to}}
{{/if}}
