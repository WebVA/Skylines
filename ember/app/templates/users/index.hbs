{{#base-page}}
  <div class="page-header">
    <h1>{{t "users"}}</h1>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th>{{t "name"}}</th>
          <th>{{t "club"}}</th>
        </tr>
        </thead>
        <tbody>
        {{#each model.users as |user|}}
          <tr>
            <td>
              <a href="/users/{{user.id}}">{{user.name}}</a>
            </td>
            <td class="column-buttons">
              {{#if user.club}}
                <a href="/clubs/{{user.club.id}}">{{user.club.name}}</a>
              {{/if}}

              <div class="pull-right hidden-xs">
                <a href="/flights/pilot/{{user.id}}" class="btn btn-default btn-sm"><i class="icon-plane"></i> {{t "flights"}}</a>
                <a href="/statistics/pilot/{{user.id}}" class="btn btn-default btn-sm hidden-xs-inline"><i class="icon-bar-chart"></i> {{t "statistics"}}</a>
              </div>
            </td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  </div>
{{/base-page}}