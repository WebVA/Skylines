<div local-class="GraphicLayerSwitcher" class="ol-unselectable" ...attributes>
  {{#if open}}
    <div id="GraphicLayerSwitcher-open" {{on-click-outside (action (mut open) false) eventType="mousedown"}}>
      <div local-class="base_layers">
        {{#each baseLayers as |layer|}}
          <LayerSwitcherElement @name={{layer.name}} @visible={{eq this.mapSettings.baseLayer layer.name}} @onSelect={{action "select" layer}} />
        {{/each}}
      </div>
      <div local-class="overlay_layers">
        {{#each overlayLayers as |layer|}}
          <LayerSwitcherElement @name={{layer.name}} @visible={{includes this.mapSettings.overlayLayers layer.name}} @onSelect={{action "select" layer}} />
        {{/each}}
      </div>
    </div>
  {{else}}
    <div id="GraphicLayerSwitcher-closed">
      <button {{action "open"}}><img src="../../images/layers.png"></button>
    </div>
  {{/if}}
</div>