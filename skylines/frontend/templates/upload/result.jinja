{% extends "base-page.jinja" %}
{% set active_page = "upload" %}
{% set use_ember = true %}
{% set openlayers = true %}

{% block title %}{% trans %}Upload Flight{% endtrans %}{% endblock %}

{%- block scripts %}
{{ super() }}

{% assets 'upload_js' -%}
  <script type="text/javascript" src="{{ ASSET_URL }}"></script>
{%- endassets %}

<script type="text/javascript">
  $(document).ready(function() {
    $('.airspace-image[rel=popover]').popover({
      html: true,
      template: '<div class="popover" style="max-width: 500px;"><div class="arrow"></div><div class="popover-content"></div></div>',
      trigger: 'hover',
      placement: 'top'
    });
  });
</script>
{% endblock %}

{%- block content %}
<div data-component="upload-results-form" data-attrs='{
  "clubMembers": {{ club_members|tojson }},
  "aircraftModels": {{ aircraft_models|tojson }},
  "results": {{ results_json|tojson }}
}'>Loading...</div>
{%- endblock %}
