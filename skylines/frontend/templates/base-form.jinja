{% extends "base.jinja" %}
{% from 'topbar.jinja' import topbar with context %}

{% block body -%}
  {{ topbar(active_page) }}

  <div id="ember-application">
    {% block ember_application %}
      <div>
      <div class="container">
        <div class="content">
          {% if self.title() -%}
            <div class="page-header">
              <h1>{{ self.title() }}</h1>
            </div>
          {%- endif %}

          <div class="row">
            <div class="col-md-12">
              <div class="row">
                <div class="panel col-sm-8 col-sm-offset-2">
                  {% block form %}{% endblock %}
                </div>
              </div>
            </div>
          </div>
        </div>

        <p class="footer">
          {% block footer -%}
            &copy; <a href="{{ url_for('about.skylines_team') }}">{{ _('The SkyLines Team') }}</a> -
            <a href="{{ url_for('about.imprint') }}">{% trans %}Imprint{% endtrans %}</a>
          {%- endblock %}
        </p>
      </div>
      </div>
    {% endblock %}
  </div>
{%- endblock %}
