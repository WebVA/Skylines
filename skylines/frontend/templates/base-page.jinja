{% extends "base.jinja" %}
{% from 'topbar.jinja' import topbar with context %}

{% block body -%}
{{ topbar(active_page) }}

<div id="ember-application">
{% block ember_application %}
<div class="container">
    <div class="content">
        {% if self.title() -%}
        <div class="page-header">
            <h1>{{ self.title() }}</h1>
        </div>
        {%- endif %}

        <div class="row">
            <div class="col-md-12">
                {%- block content %}{% endblock %}
            </div>
        </div>
    </div>

    <p class="footer">
        {% block footer -%}
        &copy; <a href="{{ url_for('about.skylines_team') }}">{{ _('The SkyLines Team') }}</a> -
        <a href="{{ url_for('about.imprint') }}">{% trans %}Imprint{% endtrans %}</a>
        {%- endblock %}
    </p>
</div>
{% endblock %}
</div>
{%- endblock %}
