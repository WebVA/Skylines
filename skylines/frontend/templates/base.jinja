<!doctype html>
<html>
<head>
    {%- block head %}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    {% if g.current_user %}
      <meta name="skylines-user" content="{{ g.current_user.id }}||{{ g.current_user.name|e }}">
      {% if g.current_user.club %}
        <meta name="skylines-club" content="{{ g.current_user.club.id }}||{{ g.current_user.club|e }}">
      {% endif %}
    {% endif %}

    <title>{% filter striptags %}{% block title %}{% endblock %}{% if self.title() %} - {% endif %}SkyLines{% endfilter %}</title>

    <link rel='shortcut icon' href='/favicon.ico' type='image/x-icon' />
    <link rel='shortcut' href='/favicon.png' type='image/png' />

    {% block styles -%}
    {%- assets 'all_css' %}
    <link rel="stylesheet" type="text/css" href="{{ ASSET_URL }}"/>
    {%- endassets %}
    {%- endblock %}

    <!--[if lte IE 8]>
    {% assets 'respond_js' -%}<script type="text/javascript" src="{{ ASSET_URL }}"></script>{%- endassets %}
    <![endif]-->

    {%- endblock %}
</head>
<body{% block body_attributes %}{% endblock %}>
{%- block body %}{% endblock %}

{% block scripts -%}
{%- assets 'all_js' %}
<script type="text/javascript" src="{{ ASSET_URL }}"></script>
{%- endassets %}

{% if use_ember %}
<script src="https://cdn.polyfill.io/v2/polyfill.min.js?features=Intl.~locale.en,Intl.~locale.de"></script>
<script type="text/javascript" src="/ember/assets/vendor.js"></script>
<script type="text/javascript" src="/ember/assets/skylines.js"></script>
<script type="text/javascript">
window.slLocale = '{{ g.active_locale }}';
</script>
{% endif %}
{%- endblock %}
</body>
</html>
